{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "lib": ["es2017", "dom"],
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@prisma/*": ["prisma/*"],
      "@modules/*": ["modules/*"],
      "@auth/*": ["modules/auth/*"],
      "@user/*": ["modules/user/*"],
      "@post/*": ["modules/post/*"],
      "@comment/*": ["modules/comment/*"],
      "@vote/*": ["modules/vote/*"],
      "@hashtag/*": ["modules/hashtag/*"],
      "@notification/*": ["modules/notification/*"],
      "@guards/*": ["guards/*"], 
      "@decorators/*": ["decorators/*"],
      "@prismaService": ["prisma/prisma.service"]
    },
    "incremental": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist"]
}
